---
const { frontmatter } = Astro.props;
console.log(frontmatter);
---

<dl class="doc-control">
    <dt>Responsible Person</dt>
    <dd>
        {frontmatter.responsible_person}
    </dd>
    <dt>Date of Board Approval:</dt>
    <dd>
        {frontmatter.date_of_board_approval}
    </dd>
    <dt>Date Effective:</dt>
    <dd>
        {frontmatter.date_effective}
    </dd>
    <dt>Review Date:</dt>
    <dd>
        {frontmatter.review_date}
    </dd>
    <dt>Document Type:</dt>
    <dd>
        {frontmatter.document_type}
    </dd>
    <dt>Related Documents</dt>
    <dd>
        {frontmatter.related_documents}
    </dd>
</dl>

<style>
    .doc-control {
        display: inline-grid;
        grid-template-columns: 25% 75%;
        grid-template-rows: auto;
        grid-gap: 0px;
        margin: 0 0 20px 0;
        border-bottom: 1px black solid;
        border-right: 1px black solid;
        width: 100%;
    }

    .doc-control dt,
    .doc-control dd {
        padding: 5px;
        border-left: 1px black solid;
        border-top: 1px black solid;
        margin-left: 0px;
    }

    .doc-control dt {
        background-color: #51534a;
        color: #fff;
    }
    @media (max-width: 639px) {
        .doc-control {
            grid-template-columns: 100%;
        }
    }
</style>
