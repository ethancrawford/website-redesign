---
import "../styles/normalize.css";
import "../../../../rkn-astro-library/page-components/global.css";
import { HeaderWrapper } from "@rkn/header-components";
import { HeaderLogo } from "@rkn/header-components";
import { HeaderNav } from "@rkn/header-components";
import textLogo from "../images/AnchorageTextLogo.png";
import { HeaderNavItem } from "@rkn/header-components";
import { HeaderNavDropdown } from "@rkn/header-components";
import { HeaderNavDropdownItem } from "@rkn/header-components";
import { HeaderToggle } from "@rkn/header-components";
import { FooterWrapper } from "@rkn/footer-components";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Source+Sans+Pro&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body>
        <HeaderWrapper>
            <HeaderLogo
                textLogo={textLogo}
                logoAltText="Anchorage Collective Logo"
            />
            <HeaderNav>
                <HeaderNavItem itemhref="#" itemName="Find Me A..." />
                <HeaderNavDropdown buttonName="About The Anchorage">
                    <HeaderNavDropdownItem itemhref="#" itemName="Who We Are" />
                    <HeaderNavDropdownItem
                        itemhref="#"
                        itemName="The Collective"
                    />
                </HeaderNavDropdown>
                <HeaderNavItem itemhref="#" itemName="Moorings" />
                <HeaderNavItem itemhref="#" itemName="Contact" />
            </HeaderNav>
            <HeaderToggle />
        </HeaderWrapper>
        <main>
            <slot />
        </main>
        <FooterWrapper />

        <style is:global>
            :root {
                font-family: "Source Sans Pro", sans-serif;
            }
            h1,
            h2 {
                font-family: "Montserrat", sans-serif;
            }
        </style>
    </body>
</html>
