---
import "../styles/normalize.css";
import "../../../../rkn-astro-library/base-components/global.css";
import { HeaderWrapper } from "@rkn/base-components";
import { HeaderLogo } from "@rkn/base-components";
import { HeaderNav } from "@rkn/base-components";
import textLogo from "../images/AnchorageTextLogo.png";
import { HeaderNavItem } from "@rkn/base-components";
import { HeaderNavDropdown } from "@rkn/base-components";
import { HeaderNavDropdownItem } from "@rkn/base-components";
import { HeaderToggle } from "@rkn/base-components";
import { FooterWrapper } from "@rkn/base-components";
import { FooterNavItem } from "@rkn/base-components";
import { IconInstagram } from "@rkn/base-components";
import { IconFacebook } from "@rkn/base-components";
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Source+Sans+Pro&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body>
        <HeaderWrapper>
            <HeaderLogo
                textLogo={textLogo}
                logoAltText="Anchorage Collective Logo"
            />
            <HeaderNav>
                <HeaderNavItem itemhref="/find-me-a" itemName="Find Me A..." />
                <HeaderNavDropdown buttonName="About The Anchorage">
                    <HeaderNavDropdownItem itemhref="#" itemName="Who We Are" />
                    <HeaderNavDropdownItem
                        itemhref="/the-collective"
                        itemName="The Collective"
                    />
                </HeaderNavDropdown>
                <HeaderNavItem itemhref="#" itemName="Moorings" />
                <HeaderNavItem itemhref="/contact" itemName="Contact" />
            </HeaderNav>
            <HeaderToggle />
        </HeaderWrapper>
        <main>
            <slot>
                <div class="placeholder">
                    <p>
                        Here is some placeholder content. It will disappear when
                        you put your own content in :)
                    </p>
                </div>
            </slot>
        </main>
        <FooterWrapper>
            <FooterNavItem itemhref="#" itemName="Find Me A..." slot="links" />
            <FooterNavItem
                itemhref="/contact"
                itemName="Contact"
                slot="links"
            />
            <IconFacebook iconhref="#" slot="socials" />
            <IconInstagram iconhref="#" slot="socials" />
        </FooterWrapper>
        <style is:global>
            :root {
                font-family: "Source Sans Pro", sans-serif;
            }
            h1,
            h2 {
                font-family: "Montserrat", sans-serif;
            }
        </style>
    </body>
</html>
<style>
    div.placeholder {
        height: 80vh;
    }
</style>
