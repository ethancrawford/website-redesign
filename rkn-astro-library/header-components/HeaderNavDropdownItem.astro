---
const { itemName, itemhref } = Astro.props;
---

<li><a href={itemhref}>{itemName}</a></li>

<style>
    a {
        font-family: Montserrat;
        text-transform: uppercase;
        font-weight: 700;
        color: white;
        text-decoration: none;
    }
    li {
        display: flex;
        align-items: center;
        flex-shrink: 0;
        flex-grow: 1;
    }
    @media (min-width: 917px) {
        li {
            flex-basis: 40px;
        }
    }
    @media (max-width: 916px) {
        li {
            padding: 10px 0;
        }
    }
</style>
