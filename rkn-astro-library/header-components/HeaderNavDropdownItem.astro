---
const { itemName, itemhref } = Astro.props;
---

<li><a href={itemhref}>{itemName}</a></li>

<style>
    li {
        display: flex;
        align-items: center;
        flex-shrink: 0;
        flex-grow: 1;
    }
    li:last-of-type {
        padding-bottom: 10px;
    }
    @media (min-width: 917px) {
        li {
            flex-basis: 40px;
        }
    }
    @media (max-width: 916px) {
        li {
            padding: 10px 0;
        }
    }
</style>
