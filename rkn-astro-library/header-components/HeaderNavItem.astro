---
const { itemhref, itemName } = Astro.props;
---

<li><a href={itemhref}>{itemName}</a></li>

<style>
    li {
        display: flex;
        align-items: center;
        max-height: 50px;
        padding-right: 20px;
        flex-shrink: 0;
    }
    @media (min-width: 917px) {
        /* insert '|' spaced in between nav items */
        li:not(:first-of-type):before {
            padding-right: 20px;
            content: "|";
            font-weight: 400;
            color: white;
            z-index: 1;
        }
        li:last-of-type {
            padding-left: 20px;
        }
    }
    @media (max-width: 916px) {
        li {
            padding: 10px 0;
        }
    }
</style>
