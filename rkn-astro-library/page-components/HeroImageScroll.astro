---
const { BackgroundImage } = Astro.props;
const backgroundImageVar = `url("` + BackgroundImage + `")`;
/*WHERE POSSIBLE, ONLY USE ONE PER PAGE - THE IMAGES DON'T LAZY LOAD*/
---

<section>
    <div class="backgroundImage">
        <div class="contents-wrapper">
            <slot />
        </div>
    </div>
</section>
<style define:vars={{ backgroundImageVar }}>
    section {
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        flex-direction: column;
    }
    div.backgroundImage {
        background-image: var(--backgroundImageVar);
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
        width: 100%;
        height: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-bottom: 4rem;
    }
    :global(div.contents-wrapper) {
        max-width: 750px;
        margin: 0 2rem;
    }
</style>
